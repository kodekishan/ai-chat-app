generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

// Here robots are the AI Users that will respond to your chat.
model Robot {
  id            String @id @default(uuid())
  userId        String
  userName      String
  src           String
  name          String @db.Text
  description   String
  instruction   String @db.Text
  seed          String @db.Text

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}